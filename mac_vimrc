let g:sass_started_dirs = []
function! Sass_start()
	let current_dir = expand('%:p:h')
	if match(g:sass_started_dirs, '^'.current_dir.'$') == -1
		call add(g:sass_started_dirs, current_dir)
		call system('sass --watch ' . current_dir . ' &')
	endif
endfunction

au! BufRead *.scss call Sass_start()

